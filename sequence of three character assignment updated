#include <iostream>
#include <string>

int main() {
    std::string main_string;
    std::string search_sequence;

    std::cout << "Enter the main string: ";
    std::getline(std::cin, main_string);

    search_sequence.resize(3); 
    std::cout << "Enter the 3-character sequence to find: ";
    std::cin.read(&search_sequence[0], 3);
    
    size_t found_pos = main_string.find(search_sequence);

    if (found_pos != std::string::npos) {
        std::cout << "Sequence \"" << search_sequence << "\" found at index " << found_pos << std::endl;
    } else {
        std::cout << "Sequence \"" << search_sequence << "\" not found." << std::endl;
    }

    return 0;
}
